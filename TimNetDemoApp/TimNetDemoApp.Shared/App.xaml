<Application x:Class="TimNetDemoApp.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:conv="using:TimNetDemoApp.Converters"
             xmlns:local="using:TimNetDemoApp">
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resources.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    		<vm:ViewModelLocator xmlns:vm="using:TimNetDemoApp.ViewModel" x:Key="Locator" />
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    	</ResourceDictionary>
    </Application.Resources>
</Application>